<div class="container">
  <%= form_for @article do |form| -%>
    <div class='form-group'>
      <div class='input-group-lg'>
        <%= form.text_field :title, :value => @article.title, :class => 'form-control', :placeholder => 'Title' %>
      </div>
    </div>
    <br>
    <div class='form-group'>
      <%= form.text_area :contents, :value => @article.contents, :id => 'text-editor', :class => 'ckeditor' %>
    </div>
    <br>
    <% if member_signed_in? && current_member.admin? %>
      <div class='checkbox'>
        <label>
          <%= form.check_box :featured %>
          Feature Article
        </label>
      </div>
      <br>
        <div class="radio">
          <label>
            <%= form.radio_button(:state, "unpublished") %>
            Unpublished
          </label>
        </div>
        <div class="radio">
          <label>
            <%= form.radio_button(:state, "published") %>
            Published
          </label>
        </div>
        <div class="radio">
          <label>
            <%= form.radio_button(:state, "needs_sources") %>
            Needs Sources
          </label>
        </div>
      <br>
    <% end %>
    <%= form.button 'Submit', :type => 'submit', :class => 'btn btn-default' %>
  <% end -%>
</div>



